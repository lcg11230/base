    <!--项目版本-->
    <version>1.0-SNAPSHOT</version>

    <!--多模块-->
    <modules>
        <module>base-code</module>
        <module>base-api</module>
        <module>base-web</module>
    </modules>
    <!--用于定义pom常量-->
